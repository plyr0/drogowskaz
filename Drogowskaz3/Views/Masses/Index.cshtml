@model IEnumerable<WebApplication1.Mass>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Generuj", "Create")
    @Html.ActionLink("Usuń wszystkie", "Delete")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RuleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MassType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rule.MassType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Church.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.RuleId.ToString(), "Details", "Rules", new { id = item.RuleId }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MassType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rule.MassType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Church.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
